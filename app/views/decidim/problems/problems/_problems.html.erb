<div class="collection-sort-controls row small-up-1 medium-up-3 card-grid">
  <div class="column">
    <%= order_selector available_orders, i18n_scope: "decidim.problems.problems.orders" %>
  </div>

  <div class="column">
    <%= render partial: "decidim/shared/results_per_page" %>
  </div>
</div>

<div class="<%= css_full_cardgrid_cols(@component_settings.hide_filters) %>">
  <%= render problems %>
</div>

<div class="row">
  <div class="columns mediumlarge-8 large-9">
    <% if problems.empty? %>
      <div class="callout secondary">
        <% if params[:filter].present? %>
          <p><%= t(".empty_filters") %></p>
        <% else %>
          <p><%= t(".empty") %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<%= decidim_paginate problems %>
