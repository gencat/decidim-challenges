<div class="picker-header">
  <h1><%= t(".title") %></h1>
</div>
<div class="picker-content picker-list" data-picker-path="/picker_path" data-picker-more="<%= false %>">
  <% Decidim::Sdgs::Sdg::SDGS.each_with_index do |name, idx|
    translated_name= t(name, scope: "decidim.sdgs.names")
  %>
  <label>
    <input type="checkbox" data-picker-url="/picker/path/browsing/this/element" data-picker-text="<%= translated_name %>" value="<%= idx %>" data-picker-choose>
    <%= translated_name %>
  </label>
  <% end %>
</div>
<div class="picker-footer">
  <div class="buttons button--double">
    <a class="button" data-close=""><%= t(".close") %></a>
  </div>
</div>

<%#= javascript_include_tag "decidim/proposals/admin/proposals_picker" %>

